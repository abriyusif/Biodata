<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="25dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_marginTop="200dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

           <TextView
               android:id="@+id/name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Name:"
               android:textAlignment="textStart"
       />
       <TextView
           android:id="@+id/realName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Abri Yusif Samana"
           android:layout_alignParentRight="true"
           android:textAlignment="textEnd"
           />

        <TextView
            android:id="@+id/campus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campus:"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/name"
            android:textAlignment="textStart"
            />
        <TextView
            android:id="@+id/campusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jomo Kenyatta University"
            android:layout_below="@id/realName"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:textAlignment="textEnd"
            />

       <TextView
           android:id="@+id/campName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Camp:"
           android:layout_below="@+id/campus"
           android:textAlignment="textStart"
           android:layout_marginTop="5dp"
           />
       <TextView
           android:id="@+id/RealCampusName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Kakuma"
           android:layout_below="@id/campusName"
           android:layout_alignParentRight="true"
           android:layout_marginTop="5dp"
           android:textAlignment="textEnd"
           />



       <TextView
           android:id="@+id/PhoneNo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Phone:"
           android:layout_below="@+id/campName"
           android:textAlignment="textStart"
           android:layout_marginTop="5dp"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="+254708599451"
           android:layout_below="@id/RealCampusName"
           android:layout_alignParentRight="true"
           android:layout_marginTop="5dp"
           android:textAlignment="textEnd"
           />
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Edit"
           android:layout_marginTop="8dp"
           android:layout_below="@id/PhoneNo"/>
    </RelativeLayout>

</RelativeLayout>